              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bgz">
              
  
    <ImageButton
        android:id="@+id/imageButtonGeneral"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:background="@drawable/general" />
    <ImageButton
        android:id="@+id/imageButtonTableSetting"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:background="@drawable/tablesetting" />
    <ImageButton
        android:id="@+id/imageButtonFineDining"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:background="@drawable/finedining" />
    
    
</LinearLayout>
